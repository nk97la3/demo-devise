<%= form_for @product, method: :put, :html =>{:multipart =>true}, url: wizard_path do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>
      <ul>
        <% @product.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <p>
    <%= f.label :image%><br>
    <%= f.file_field :image %>
  </p>
  <div class="field">
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </div>
  <div class="actions">
    <%= f.submit "Back" , :name=>"Back"%> <%= f.submit "Next Step" %>
  </div>
  <%=f.submit"Save", :name =>"Save"%>

<% end %>
