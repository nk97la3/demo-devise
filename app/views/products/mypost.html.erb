<h1>No Publish Posts</h1>
<div class="aaa">
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Opening</th>
      <th>Body</th>
      <th>Conclusion</th>
      <th>Aboutauthor</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
        <% @products.each do |product| %>
          <%-if product.user_id == current_user.id%>
            <%-if product.published != "published" %>
              <tr>
                <td><%= product.title %></td>
                <td><%= product.opening %></td>
                <td><%= product.body %></td>
                <td><%= product.conclusion %></td>
                <td><%= product.aboutauthor %></td>
                <td><%= link_to 'Show', product %></td>
                <td><%= link_to 'Add',  
                  if product.title == nil or product.opening == nil
                    product_step_path(product,Product.form_steps.first)
                  elsif product.body == nil or product.image == nil
                    product_step_path(product,Product.form_steps.second_to_last)
                  else
                    product_step_path(product,Product.form_steps.last)
                  end
                %></td>
                <td><%= link_to 'Edit',edit_product_path(product) %></td>                              
                <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <%end%>
          <%end%>
        <%end%>
 </tbody>
</table>
</div>

